<%= form_for @category do |f| %>
      <div class="row form-row">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control form-input" %>
          <p class="help-block"></p>
        </div> 
      </div> 

      <div class="row form-row">
        <div class="button-div">
          <%= f.submit button_name, class: "btn btn-primary form-button" %>
        </div>
      </div>
    <% end %>

  <% if !delete_button.nil?%>
    <div class="row form-row">
      <div class="button-div">
        <%= button_to "Delete Category", @category, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger form-button" %>
      </div>
    </div>
  <% end %>