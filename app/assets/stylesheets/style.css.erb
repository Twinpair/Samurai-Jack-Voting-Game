*, *::after, *::before { -webkit-box-sizing: border-box; box-sizing: border-box; }

/* Navbar */
.navbar {
  background-color: #0B0B0B !important; 
  border-color: transparent; 
  border-radius: 0%;
  box-shadow: 0 0 6px 3px rgba(0,0,0,.35); 
}
.navbar-default .navbar-nav > li > a { 
  font-family: 'Abril Fatface', serif; 
  padding-top: 25px; 
  padding-bottom: 25px; 
  min-height: 69px; 
  color: white; 
  font-size: 20px;
}
.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > li > a:focus,
.navbar-default .navbar-nav > li > a:active {
  color: #DDBE42;
}
.navbar-default .navbar-toggle {
  border-color: transparent;
}
.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
  border-color: transparent;
  background-color: transparent;
}
.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: transparent;
}
.navbar-form { padding-top: 10px !important;}
.navbar-default .navbar-brand {
  font-family: 'Abril Fatface', serif;
  font-size: 21px;
  color: #CBAF3B;
  margin-top: 10px;
}
.navbar-default .navbar-brand:hover{
  color: #CBAF3B;
}
@media screen and (max-width: 345px) {
  .navbar-default .navbar-brand {
    font-size: 16px;
  }
}

/* Body */
body {
  font-family: 'Abril Fatface', serif;
}
@media screen and (min-width:500px) {
  body {
    background-repeat: no-repeat;
    background-position: center 0%;
    background-size: cover;
    background-attachment: fixed;
  }
}
@media screen and (max-width: 480px) {
  body {
    background-position: center 0%;
  }
}
.primary-content{
  overflow: hidden;
}

/* Forms */
label{
  display: block;
  text-align: center;
  line-height: 150%;
  font-size: 1.5em;
  color: white;
  font-family: 'Abril Fatface'
}
.form-row{
  margin: 0;
}
.form-input{
  font-size: 20px;
  height: 40px;
}
.form-button{
  width: 300px;
  height: 50px;
}
.button-div{
  margin-top: 30px;
  text-align: center;
}
.button-div-index{
  text-align: center;
}
.btn-danger{
  margin-bottom: 20px;
}
.form-image{
  height: 200px;
  margin: auto;
}

/* Content */
.content {
  min-height: 85vh;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.left_card{
  left: -720px;
}
.right_card{
  left: 720px;
}
.game_card_styling{
  cursor: pointer; 
  cursor: hand;
  margin: .8em 5em;
}
.title{
  font-size: 36px;
  color: white;
  text-align: center;
  font-weight: 500;
  margin-bottom: 5px;
  font-family: 'Abril Fatface', serif;
}
#results{
  margin-top: 70px;
}
.resutls_filter{
  font-size: 20px;
  font-family: 'Abril Fatface', serif;
  color: #CBAF3B;
}
.resutls_filter a{
  color: white;
  text-decoration: none;
}
.resutls_filter a:hover,
.resutls_filter a:focus,
.resutls_filter a:active {
  color: #CBAF3B;
}
.resutls-info{
  font-size: 20px;
  font-family: 'Abril Fatface', serif;
  color: white;
}
@media screen and (max-width: 345px) {
  .resutls-info{
    font-size: 18px;
  }
}
#game_over_section{
  min-height: 65vh;
  left: -720px;
}
.game_over_row{
  text-align: center;
}
.game_over_padding{
  padding-bottom: 10px;
  margin-right: 30px;
}
.game_over_button{
  margin-right: 30px;
}
@media screen and (max-width: 480px) {
  .shrink_title{
    font-size: 24px;
  } 
}
.sub_title{
  font-size: 20px;
}
.btn {
  -webkit-border-radius: 12;
  -moz-border-radius: 12;
  border-radius: 12px;
  font-family: 'Abril Fatface', serif;
  color: #DDBE42;
  font-size: 30px;
  background: #0B0B0B;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
}
.btn:hover {
  background: #DDBE42;
  text-decoration: none;
}